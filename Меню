<script>
   function toggleMenu() {
        const menu = document.getElementById('dropdownMenu');
        menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    document.addEventListener('click', function(event) {
        const menu = document.getElementById('dropdownMenu');
        const button = document.querySelector('.catalog-button');

        if (!menu.contains(event.target) && !button.contains(event.target)) {
            menu.style.display = 'none'; // Скрыть меню
        }
    });

    function navigateToCollection(category) {
        window.location.href = `/collections/${category}`;
    }

    function showSubcategory(categoryId) {
        document.querySelectorAll('.sub-category-column').forEach(block => {
            block.style.display = 'none';
        });

        // Показываем подкатегории для выбранной категории
        if (categoryId === 'базы') {
            document.getElementById('базы').style.display = 'flex';
            document.getElementById('базы-gama').style.display = 'flex'; // Показать подкатегорию
            document.getElementById('базы-hello').style.display = 'flex';
            document.getElementById('базы-luna').style.display = 'flex';
            document.getElementById('базы-notd').style.display = 'flex';
            document.getElementById('базы-monami').style.display = 'flex';
            document.getElementById('базы-hd-hollywood').style.display = 'flex';
            document.getElementById('базы-american-creator').style.display = 'flex';
            document.getElementById('базы-da23').style.display = 'flex';
            document.getElementById('базы-easy').style.display = 'flex';
            document.getElementById('базы-vav').style.display = 'flex';
            document.getElementById('базы-dnka').style.display = 'flex';


        } else if (categoryId === 'гель-лаки') {
            document.getElementById('гель-лаки-gama').style.display = 'flex';
            document.getElementById('гель-лаки-notd').style.display = 'flex';
        }
        
        document.getElementById('subcategoryBlock').style.display = 'flex';
    }

